    "build": "next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "clear": "rm -rf .next",
    "format": "pnpm lint --fix --dir src",
    "add:ui": "pnpm dlx shadcn@latest add",
    "db:local": "turso dev --db-file ./drizzle/local-db.db",
