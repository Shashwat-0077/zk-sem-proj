    "db:apply": "pnpm run scripts/migrate.ts",
    "db:generate:dbml": "pnpm run src/db/generate-dbml.ts",
    "db:studio": "drizzle-kit studio",
    "db:reset": "rm -rf ./drizzle && pnpm run db:generate && pnpm run db:apply"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
